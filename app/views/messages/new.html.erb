<style type="text/css" media="screen">
.form-inputs {
    max-width: 300px;
    text-indent: 15px; 
}
</style>

<% if current_user_subscribed? %>
	<h1>New Message</h1>
	<%= render 'form', message: @message %>

	<%= link_to 'Back', messages_path %>
<% else %>
	<%= render "/shared/subscription_ask" %>
		
<% end %>

