<div class="messages ">
	<div style="@include outer-container">
	<%= simple_form_for(@message) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
		<%#= f.input :title %>
        <div class="field" id="contacts">
			<%= f.association :contact, 
		  		collection: Contact.order(:first_name),
                include_blank: true,
                input_html: { class: 'chosen-select' }, 
				prompt: 'Select Contact' %>
		</div>
		<div class="field">
		  <%#= f.label :message_script_id %><br />
		  <%= f.association :message_script, 
		  		collection: MessageScript.order(:title),
                include_blank: true,
                input_html: { class: 'chosen-select' }, 
				prompt: 'Select Message Script',
				label: 'Choose a Pre-Written Script' %>
		  
		</div>

	    <div class="field" id="body">
  		  <label>-- OR -- Write in an original Message Below</label>
			
			<%= f.text_area :body, size: "60x3" %>
		</div>
	  </div>



	  <div class="form-actions">
	    <%#= f.button :submit %>
	    <%= f.button :submit, class: 'btn-primary' %>
	    <%= submit_tag 'Cancel', type: :reset, class: 'btn btn-danger' %>
	  </div>
	<% end %>
	</div>
</div>
