<p id="notice"><%= notice %></p>

<h1>Contacts</h1>
<%= link_to 'Create Contact', new_contact_path %> | 
<%= link_to 'Create Roster', new_roster_path %> | 
<%= link_to "Rosters", rosters_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to "#{contact.first_name} #{contact.last_name}", contact %></td>
        <td> <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

