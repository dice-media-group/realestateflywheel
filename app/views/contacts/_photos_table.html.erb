<table class="table-minimal">
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
	  <% @photos.each do |photo| %>
	    <tr>
	      <td><%= link_to image_tag(photo.image.url(:thumb).to_s), photo_path(photo)%>
			  <%#= link_to image_tag("path/to/image.png"), "http://www.mysite.com/"%>
		  </td>
	      <td><%= photo.description %></td>
	      <td><%= link_to "Edit", edit_photo_path(photo) %>
			  <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>

		  </td>
	    </tr>
	  <% end %>
  </tbody>
</table>