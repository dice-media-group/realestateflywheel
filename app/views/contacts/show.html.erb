<%= link_to 'Back to Contacts', contacts_path %>
<p>Tags: <%= raw(@contact.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></p>

<div id='tag_cloud'>
  <% tag_cloud Contact.tag_counts, %w{s m l} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<%= render partial: "flex_boxes" %>
