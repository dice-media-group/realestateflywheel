<%= simple_form_for @contact, html: { multipart: true }  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
  </div>

  <div class="form-inputs">
    <%= f.input :last_name %>
  </div>
  
  <div class="form-inputs">
    <%= f.input :primary_phone %>
  </div>

  <div class='field'>
      <%= f.label :tag_list, 'Tags (separated by commas)' %><br/>
      <%= f.text_field :tag_list %>
  </div>
  	<div class="field" id="rosters">
  <%= f.association :rosters, 
                     as: :select, 
					 collection: Roster.order(:title),
                     label_method: :title, 
                     value_method: :id,
					 include_blank: false,
	                 input_html: { class: 'chosen-select' }, 
                     label: 'Contact Rosters' %>
					 
	</div>

  <div class="form-inputs">
	<%= f.input :primary_phone_kind, 
			collection: [ "Mobile", "Home", "Work"], 
	  		
	        include_blank: true,
	        input_html: { class: 'chosen-select' }, 
			prompt: 'Select type of Phone' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
