<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
  </div>

  <div class="form-inputs">
    <%= f.input :last_name %>
  </div>
  
  <div class="form-inputs">
    <%= f.input :primary_phone %>
  </div>

  <div class="form-inputs">
	<%= f.input :primary_phone_kind, collection: [ "Mobile", "Home", "Work"] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
